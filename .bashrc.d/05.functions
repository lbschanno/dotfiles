#!/bin/bash

update_master_from_upstream() {
  git checkout master
  git fetch -p upstream
  git merge upstream/master
}

exec_foreach_submodule() {
  local cmd="${@}"
  git submodule foreach "${cmd}"
}

sha256() {
  shasum -a 256 $1 | awk '{ print $1 }'
}

list_chmod_codes() {
  echo "0: ---   4: r--"
  echo "1: --x   5: r-x"
  echo "2: -w-   6: rw-"
  echo "3: -wx   7: rwx"
}
